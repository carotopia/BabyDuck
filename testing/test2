program TestFunciones;

var
    resultado, base, exponente: int;


void multiplicar(a: int, b: int) [

    print("Multiplicando", a, "x", b);
    print("Resultado:", a * b);} ];


void areaRectangulo(largo: int, ancho: int) [

    print("Calculando √°rea del rect√°ngulo");
    print("Largo:", largo);
    print("Ancho:", ancho);
    multiplicar(largo, ancho);
    print("√Årea calculada");
 ];


void cuadrado(num: int) [
{
    print("Calculando cuadrado de", num);
    multiplicar(num, num);
} ];


void calculos(x: int, y: int) [
{
    print("=== INICIANDO C√ÅLCULOS ===");
    print("Valores recibidos:", x, y);


    areaRectangulo(x, y);

    print("---");


    cuadrado(x);
    cuadrado(y);

    print("=== FIN DE C√ÅLCULOS ===");
} ];

main {
    print("üöÄ Test de Funciones Anidadas");
    print("=============================");

    base = 4;
    exponente = 3;

    print("Base:", base);
    print("Exponente:", exponente);


    calculos(base, exponente);

    print("=============================");
    print("‚úÖ Test completado");
}
end